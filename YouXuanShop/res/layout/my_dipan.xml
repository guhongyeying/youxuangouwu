<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffff0f5"
    android:orientation="vertical" >

    <!-- 我的地盘 layout 尹稳定 2014.11.17 -->

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@color/red" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的地盘"
            android:textColor="#ffffffff"
            android:textSize="20.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/taobao_go"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tao" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/wuliu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wuliu" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/gouwuche"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gouwuche" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dingdan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dingdan" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/shoucang"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wode_shoucang" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/shezhi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shezhi" />
    </LinearLayout>

</LinearLayout>