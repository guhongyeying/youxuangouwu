            android:text="女装" />

        <TextView
            style="@style/shouye_all_images_txt"
            android:text="男装" />

        <TextView
            style="@style/shouye_all_images_txt"
            android:text="家居" />

        <TextView
            style="@style/shouye_all_images_txt"
            android:text="母婴" />
    </LinearLayout>
   <!-- /////////////////////////////////////////////// -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="horizontal" 
        android:layout_marginTop="10dp">

        <ImageView android:id="@+id/shouye_images_05"
            style="@style/shouye_all_images"
            android:src="@drawable/shouye_all_image6_selector" />

        <ImageView android:id="@+id/shouye_images_06"
            style="@style/shouye_all_images"
            android:src="@drawable/shouye_all_image7_selector" />

        <ImageView android:id="@+id/shouye_images_07"
            style="@style/shouye_all_images"
            android:src="@drawable/shouye_all_image8_selector" />

        <ImageView android:id="@+id/shouye_images_08"
            style="@style/shouye_all_images"
            android:src="@drawable/shouye_all_image10_selector" />
