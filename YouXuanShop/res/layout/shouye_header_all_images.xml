            android:src="@drawable/shouye_all_image3_selector" />

        <ImageView android:id="@+id/shouye_images_03"
            style="@style/shouye_all_images"
            android:src="@drawable/shouye_all_image4_selector" />

        <ImageView android:id="@+id/shouye_images_04"
            style="@style/shouye_all_images"
            android:src="@drawable/shouye_all_image5_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="5dp">

