<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/shouye_images_00"
            style="@style/shouye_all_images"
            android:src="@drawable/shouye_all_image1_selector"/>

        <ImageView
            android:id="@+id/shouye_images_01"
            style="@style/shouye_all_images"
            android:src="@drawable/shouye_all_image2_selector"/>

        <ImageView android:id="@+id/shouye_images_02"
