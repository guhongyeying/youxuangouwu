        <ImageView android:id="@+id/shouye_images_09"
             style="@style/shouye_all_images"
             android:src="@drawable/shouye_all_image9_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="5dp">

        <TextView
            style="@style/shouye_all_images_txt"
            android:text="鞋包" />

        <TextView
            style="@style/shouye_all_images_txt"
            android:text="配饰" />

        <TextView
            style="@style/shouye_all_images_txt"
            android:text="美妆" />

        <TextView
            style="@style/shouye_all_images_txt"
            android:text="美食" />

